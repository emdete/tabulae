<?xml version="1.0" encoding="UTF-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.robert.maps"
    android:installLocation="auto"
    android:sharedUserId="@string/app_user_id"
    android:sharedUserLabel="@string/app_user_label"
    android:versionCode="08102"
    android:versionName="0.8.10.1" >

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowClearUserData="false"
        android:debuggable="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name="MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <intent-filter>
                <action android:name="com.robert.maps.action.SHOW_POINTS"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name="MainPreferences" >
        </activity>

        <provider
            android:name=".utils.SearchSuggestionsProvider"
            android:authorities="com.robert.maps.SuggestionProvider" >
        </provider>

        <activity android:name=".kml.PoiActivity" />
        <activity android:name=".kml.PoiListActivity" />
        <activity android:name=".kml.TrackListActivity" />
        <activity android:name=".kml.PoiCategoryActivity" >
        </activity>
        <activity android:name=".kml.PoiCategoryListActivity" >
        </activity>
        <activity android:name=".kml.PoiIconSetActivity" >
        </activity>
        <activity android:name=".kml.ImportPoiActivity" />
        <activity android:name=".kml.ImportTrackActivity" >
        </activity>
        <activity android:name=".kml.TrackActivity" >
        </activity>
        <activity android:name=".kml.TrackStatActivity" >
        </activity>

        <service
            android:name=".trackwriter.TrackWriterService"
            android:icon="@drawable/track_writer_service"
            android:process=":trackwriter" >
            <intent-filter>
                <action android:name="com.robert.maps.trackwriter" />
                <action android:name="com.robert.maps.trackwriter.IRemoteService" />
            </intent-filter>
        </service>

        <activity android:name="org.openintents.filemanager.FileManagerActivity" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-sdk android:minSdkVersion="3" android:targetSdkVersion="8"/>

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true" />

</manifest>