<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/main"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	>
	<LinearLayout
		android:id="@+id/LinearLayout01"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@id/pic"
			android:src="@drawable/track_background"
			android:layout_marginTop="9sp"
			android:layout_marginLeft="8sp"
			/>
		<LinearLayout
			android:id="@+id/LinearLayout02"
			android:layout_width="0dip"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			>
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="6dip"
				android:text="@string/btn_start"
				android:ellipsize="end"
				android:textAppearance="@style/title_red"
				android:id="@id/title1"
				android:layout_marginTop="4dip"
				/>
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="6dip"
				android:layout_below="@android:id/text1"
				android:layout_alignLeft="@android:id/text1"
				android:text="@string/btn_stop"
				android:textAppearance="@style/title_white_2"
				android:id="@id/title2"
				/>
		</LinearLayout>
		<CheckBox
			android:id="@+id/checkbox"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:button="@drawable/checkbox"
			android:clickable="false"
			android:focusable="false"
			/>
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/linearLayoutData"
		android:layout_marginTop="3sp"
		android:layout_marginBottom="2sp"
		android:layout_marginLeft="6sp"
		android:layout_marginRight="15sp"
		>
		<RelativeLayout
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			>
			<TextView
				android:layout_width="wrap_content"
				android:textAppearance="@style/data_header"
				android:layout_height="wrap_content"
				android:id="@id/data_header1"
				android:text="@string/points_cnt"
				/>
			<TextView
				android:layout_below="@+id/data_header1"
				android:id="@+id/data_value1"
				android:layout_width="wrap_content"
				android:textAppearance="@style/data_value"
				android:layout_height="wrap_content"
				android:text="452"
				/>
			<TextView
				android:layout_toRightOf="@+id/data_value1"
				android:id="@+id/data_unit1"
				android:layout_alignBaseline="@+id/data_value1"
				android:layout_width="wrap_content"
				android:textAppearance="@style/data_unit"
				android:layout_height="wrap_content"
				android:paddingLeft="1sp"
				/>
		</RelativeLayout>
		<RelativeLayout
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			>
			<TextView
				android:id="@+id/data_header2"
				android:layout_width="wrap_content"
				android:textAppearance="@style/data_header"
				android:layout_height="wrap_content"
				android:text="@string/distance"
				/>
			<TextView
				android:layout_below="@+id/data_header2"
				android:id="@+id/data_value2"
				android:layout_width="wrap_content"
				android:textAppearance="@style/data_value"
				android:layout_height="wrap_content"
				android:text="452"
				/>
			<TextView
				android:layout_toRightOf="@+id/data_value2"
				android:id="@+id/data_unit2"
				android:layout_alignBaseline="@+id/data_value2"
				android:layout_width="wrap_content"
				android:textAppearance="@style/data_unit"
				android:layout_height="wrap_content"
				android:paddingLeft="1sp"
				android:text="@string/km"
				/>
		</RelativeLayout>
		<RelativeLayout
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			>
			<TextView
				android:id="@+id/data_header3"
				android:layout_width="wrap_content"
				android:textAppearance="@style/data_header"
				android:layout_height="wrap_content"
				android:text="@string/duration"
				/>
			<TextView
				android:layout_below="@+id/data_header3"
				android:id="@+id/data_value3"
				android:layout_width="wrap_content"
				android:textAppearance="@style/data_value"
				android:layout_height="wrap_content"
				android:text="452"
				/>
			<TextView
				android:layout_toRightOf="@+id/data_value3"
				android:id="@+id/data_unit3"
				android:layout_alignBaseline="@+id/data_value3"
				android:layout_width="wrap_content"
				android:textAppearance="@style/data_unit"
				android:layout_height="wrap_content"
				android:paddingLeft="1sp"
				/>
		</RelativeLayout>
	</LinearLayout>
</LinearLayout>
