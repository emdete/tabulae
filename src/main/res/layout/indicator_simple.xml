<?xml version="1.0" encoding="utf-8"?>
<org.pyneo.maps.dashboard.IndicatorView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/RelativeLayout1"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:paddingBottom="4dp"
	android:paddingLeft="4dp"
	android:paddingRight="4dp"
	android:background="@color/secondary"
	android:paddingTop="4dp"
	>
	<TextView
		android:id="@+id/data_header"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:includeFontPadding="false"
		android:maxLines="1"
		android:text="@string/points_cnt"
		android:textAppearance="@style/data_header"
		/>
	<TextView
		android:id="@+id/data_value"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/data_header"
		android:includeFontPadding="false"
		android:maxLines="1"
		android:text="452"
		android:textAppearance="@style/data_value"
		/>
	<TextView
		android:id="@+id/data_unit"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBaseline="@+id/data_value"
		android:layout_toRightOf="@+id/data_value"
		android:includeFontPadding="false"
		android:maxLines="1"
		android:paddingLeft="5.0px"
		android:text="km"
		android:textAppearance="@style/data_unit"
		/>
</org.pyneo.maps.dashboard.IndicatorView>
